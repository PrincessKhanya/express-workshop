
<div>
    <div>
        {{count}}
    </div>
    <form action="/reminder" method="POST">
        <div>
            <input type="text" name="firstName" placeholder="Entre first name">
        </div>

        <div>
            <input type="text" name="bookCount" placeholder="Entre number of books">
        </div>

        <div>
            <input type="text" name="dayCount" placeholder="Entre number of days">
        </div>  
        <div>
            <input type="submit" value="Add reminder">
        </div>      
    </form>
</div>
<div>
    <a href="/reminder">Reminder</a>
</div>

{{#each reminders}}
    <div class="reminder">
    Dear {{firstName}},
    <br>
    <br>
    The {{bookCount}} books you took out at the library is due in {{dayCount}} days.
    <br>
    <br>
    Please return these books to us in the next <a href="/reminder/{{dayCount}}/days"> {{dayCount}} days.</a>

    </div>

{{/each}}


